@{
    Layout = "_LayoutAdmin";
    ViewBag.Title = "Chi tiết đơn đăng ký";
}
@model RegisterProduct


 <main>
                    <div class="container-fluid">
                        <h4 class="mt-4">CHI TIẾT ĐƠN ĐĂNG KÝ # @Model.Id</h4>
                    </div>
                     <div class="card mb-4">
                              <div asp-validation-summary="All" class="alert alert-danger"></div>
                            
                            @if(@TempData["message"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["message"]
                                </div>
                            }
                            @if(@TempData["error"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["error"]
                                </div>
                            }
<div class="row">
     <div class="col-8 mx-auto pb-5">
            <form action="/admin/product/register/@Model.Id" method="post">
                <div asp-validation-summary="All"></div>
                    @if(!String.IsNullOrEmpty(ViewBag.message)){
                        <div class="alert alert-success">@ViewBag.message</div>
                    }
                    <div class="md-form mt-5">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Tên khách hàng:</span> @Model.Customer.FullName</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Điện thoại:</span> @Model.Customer.Phone</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Email:</span> @Model.Customer.Email</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Địa chỉ:</span> @Model.Customer.Address</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Diện tích lắp mái (m2):</span> @Model.Roof</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Công suất (W):</span> @Model.Wattage</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Vị trí lắp đặt:</span> @Model.Place</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Đơn giá:</span> @Model.UnitPrice.ToString("N0") VND</label>
                    </div>
                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Thành tiền:</span> @Model.Amount.ToString("N0") VND</label>
                    </div>

                    <div class="md-form">
                        <label for="form1"> <span style="width: 200px; display:inline-block"> Trạng thái:</span></label>
                        <select class="form-input" asp-for="Status">
                         @(Model.Status == RegisterProductStatus.Abort ? Html.Raw("<option value='0' selected >Hủy</option>") : Html.Raw(" <option value='0' >Hủy</option>"))  
                         @(Model.Status == RegisterProductStatus.Pendding ? Html.Raw("<option value='1' selected >Đang chờ</option>") : Html.Raw(" <option value='1' >Chưa xử lý</option>"))  
                         @(Model.Status == RegisterProductStatus.Success ? Html.Raw("<option value='2' selected >Đã xử lý</option>") : Html.Raw(" <option value='2' >Đã xử lý</option>"))  
                        </select>
                    </div>
                 
                    <div class="mb-4 mt-4">
                        <button class="btn btn-primary btn-rounded btn-sm my-0" type="submit">Cập nhật</button>
                    </div>
            </form>
    </div>
</div>
                     </div>
 </main>
  @section Css{ 
    <style>
       .form-upload input[type="file"]{
         width: 100px;
         z-index: 999;
         opacity: 0;
       }
            .alert.alert-danger.validation-summary-valid {
        display: none;
            }
    </style>
  }

}